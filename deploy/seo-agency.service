[Unit]
Description=Gunicorn for Isakov Agency Django App
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/seo-agency
EnvironmentFile=/var/www/seo-agency/.env
ExecStart=/var/www/seo-agency/venv/bin/gunicorn config.wsgi:application --bind 127.0.0.1:8000 --workers 3 --timeout 60 --access-logfile - --error-logfile -
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
